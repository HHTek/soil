<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:layout_editor_absoluteY="81dp">
    Theme.Holo.NoActionBar

    <ImageView
        android:id="@+id/logoimage"
        android:layout_width="100dp"
        android:layout_height="97dp"
        android:src="@mipmap/logo"
        android:layout_marginTop="90dp"
        android:layout_marginStart="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <TextView
        android:id="@+id/logotext"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="石油巡航"
        android:textColor="#221815"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/accountimage"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:src="@mipmap/account"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="294dp"
         />

    <EditText
        android:id="@+id/nameedit"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="请输入您的姓名"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="274dp"
        android:textSize="13sp"
        android:paddingLeft="31dp"
        android:includeFontPadding="true"/>

    <ImageView
        android:id="@+id/secreimage"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:src="@mipmap/secret"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="356dp"  />

    <EditText
        android:id="@+id/secretedit"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="336dp"
        android:textSize="13sp"
        android:paddingLeft="31dp" />

    <ImageView
        android:id="@+id/redimage"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@mipmap/redlog"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"
        />

    <ImageView
        android:id="@+id/grayimage"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:src="@mipmap/graylog"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"  />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="436dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        android:text="登录"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>